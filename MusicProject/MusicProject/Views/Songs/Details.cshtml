@model MusicProject.Models.Song

@{
    ViewBag.Title = "Details";
}

<h2>"@Html.DisplayFor(model => model.Title)" Song</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-lg-7">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Genres)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Genres)
                </dd>

                <dt>
                    Sing by
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Artists.FullName)
                </dd>

                <dt>
                    In Album
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Albums.Title)
                </dd>

                <dt>
                    Compose by
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Composers.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Release)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Release)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Peak_position)
                </dt>

                <dd>
                    @Html.Raw(Html.Encode(Model.Peak_position).Replace("\n", "<br />"))
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Lyric)
                </dt>
                @*Decode the text into html view*@
                <dd>
                    @Html.Raw(Model.Lyric)
                </dd>
            </dl>
        </div>

        <div class="col-md-5">
            @if (Model.YoutubeLink != null)
            {
                <iframe width="560" height="315" src="@Model.YoutubeLink" frameborder="1" allowfullscreen></iframe>
            }
            else
            {
                <iframe width="560" height="315" src="https://www.youtube.com/embed?" frameborder="1" allowfullscreen></iframe>
            }
        </div>
                
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @using (Html.BeginForm("Edit", "Songs", new { id = Model.SongID }, method: FormMethod.Get))
                {
                    if (ViewBag.displayMenu == "Member")
                    {
                        //add more function for admin
                        <input type="submit" value="Edit" class="btn btn-default" />
                    }
                    @Html.ActionLink("Back To List", "Index", "Songs", null, new { @class = "btn btn-default" })
                }
            </div>
        </div>
    </div>
</div>
