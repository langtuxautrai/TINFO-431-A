@model MusicProject.Models.Song

@{
    ViewBag.Title = "Details";
}

<h2>"@Html.DisplayFor(model => model.Title)" Song</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genres)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genres)
        </dd>

        <dt>
            Sing by
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Artists.FullName)
        </dd>

        <dt>
            In Album
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Albums.Title)
        </dd>

        <dt>
            Compose by
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composers.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Release)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Release)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Peak_position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Peak_position)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lyric)
        </dt>
        @*Decode the text into html view*@
        <dd>
            @Html.Raw(Model.Lyric)
        </dd>

    </dl>
</div>
<div>
    @using (Html.BeginForm("Edit", "Songs", new { id = Model.SongID }, method: FormMethod.Get))
    {
        <input type="submit" value="Edit" class="btn btn-default"/>
        @Html.ActionLink("Cancel", "Index", "Songs", null, new { @class = "btn btn-default" })
    }
</div>
