@model IEnumerable<MusicProject.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>List Of Artist</h2>
<div>
    @using (Html.BeginForm())
    {
        <p>
            Search: <input type="text" name="searchString" data-autocomplete-source="@Url.Action("QuickSearch", "Artists")" />
            <input type="submit" value="Search" />
        </p>
    }
</div>
<p>
    @Html.ActionLink("Add New Artist", "Create", "Artists", null, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>       
        <th>
            @Html.ActionLink("FIRST NAME", "Index", new { name = ViewBag.FnameSorting })
        </th>
        <th>
            @Html.ActionLink("LAST NAME", "Index", new { name = ViewBag.LnameSorting })
        </th>
        <th>
            @Html.ActionLink("GENRES", "Index", new { name = ViewBag.GenreSorting })
        </th>
        <th>
            @Html.ActionLink("DEBUT IN", "Index", new { name = ViewBag.DateSorting })
        </th>
        <th>
            @Html.ActionLink("MANAGE BY", "Index", new { name = ViewBag.CompanySorting })
        </th>       
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Fname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Debut_in)
        </td>
        <td>
            <a href="Companies/Details/@item.CompanyID">@Html.DisplayFor(modelItem => item.Companies.Name)</a>
        </td>        
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ArtistID })            
        </td>

        @if (ViewBag.displayMenu == "Yes")
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArtistID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ArtistID })
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArtistID })
                
            </td>
        }

    </tr>
}

</table>

@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/App/MusicScripts.js"></script>
}
