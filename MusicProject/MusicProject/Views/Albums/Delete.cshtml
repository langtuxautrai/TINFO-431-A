@model MusicProject.Models.Album

@{
    ViewBag.Title = "Delete";
}

<h2>DELETE</h2>

<h3>Are you sure you want to delete this album "@Html.DisplayFor(model => model.Title)"?</h3>
<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genres)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genres)
        </dd>

        <dt>
            Artist
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Artists.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Producers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Producers)
        </dd>

        <dt>
           Label by
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Companies.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Release)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Release)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
            @Html.ActionLink("Cancel", "Index", "Albums", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
