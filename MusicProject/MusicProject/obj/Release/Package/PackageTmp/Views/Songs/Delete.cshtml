@model MusicProject.Models.Song

@{
    ViewBag.Title = "Delete";
}

<h2>DELETE</h2>

<h3>Are you sure you want to delete this song "@Html.DisplayFor(model => model.Title)"?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genres)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genres)
        </dd>

        <dt>
            In Album
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Albums.Title)
        </dd>

        <dt>
            Artist
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Artists.FullName)
        </dd>

        <dt>
            Compose by
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composers.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Release)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Release)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Peak_position)
        </dt>

        <dd>
            @Html.Raw(Html.Encode(Model.Peak_position).Replace("\n", "<br />"))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.YoutubeLink)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YoutubeLink)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lyric)
        </dt>

        <dd>
            @Html.Raw(Html.Encode(Model.Lyric).Replace("\n", "<br />"))
            @*@Html.Raw(Model.Lyric)*@
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="col-md-offset-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", "Songs", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>
