@model MusicProject.Models.Artist

@{
    ViewBag.Title = "Delete";
}

<h2>DELETE</h2>

@if (ViewBag.Delete == "No")
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert"></button>
        <h4>Can't delete "@Html.DisplayFor(model => model.FullName)" before delete all albums of this artist!!!</h4>
    </div>
}
else
{
    <h3>Are you sure you want to delete this artist "@Html.DisplayFor(model => model.FullName)"?</h3>
}

<hr />
<div class="row">
    <div class="col-md-7">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Fname)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fname)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Lname)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Lname)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Genres)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genres)
            </dd>

            <dt>
                Manage by
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Companies.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Debut_in)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Debut_in)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Rewards)
            </dt>

            <dd>
                @Html.Raw(Model.Rewards)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImageName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ImageName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.Raw(Html.Encode(Model.Description).Replace("\n", "<br />"))
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="col-md-offset-2">
                    @if (ViewBag.Delete == "No")
                {
                        <input type="button" value="Delete" class="btn btn-danger disabled" />
                    }
                    else
                    {
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    }
                    @Html.ActionLink("Cancel", "Index", "Artists", null, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>

    <div class="col-md-4" style="padding:10px">
        @if (Model.Image != null)
        {
            <img src=@ViewBag.ImageData alt="" width="400" />
        }
        else
        {
            <img src=~/Content/Image/no_image.jpeg alt="" width="300" />
        }
    </div>
</div>