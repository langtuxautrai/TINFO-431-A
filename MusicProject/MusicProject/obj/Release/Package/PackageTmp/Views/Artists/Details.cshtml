@model MusicProject.Models.Artist

@{
    ViewBag.Title = "Details";
}

<h2>Artist "@Html.DisplayFor(model => model.FullName)"</h2>

<hr />
<div class="row">
    <div class="col-md-7">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Fname)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fname)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Lname)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Lname)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Genres)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genres)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Debut_in)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Debut_in)
            </dd>

            <dt>
                Manage by
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Companies.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Rewards)
            </dt>

            <dd>
                @Html.Raw(Html.Encode(Model.Rewards).Replace("\n", "<br />"))
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.Raw(Html.Encode(Model.Description).Replace("\n", "<br />"))
            </dd>
        </dl>
        <div class="form-group">
            <div class="col-md-offset-2">
                @using (Html.BeginForm("Edit", "Artists", new { id = Model.ArtistID }, method: FormMethod.Get))
                {
                    if (ViewBag.displayMenu == "Member")
                    {
                        <input type="submit" value="Edit" class="btn btn-success" />
                    }

                    @Html.ActionLink("Cancel", "Index", "Artists", null, new { @class = "btn btn-default" })
                }

            </div>
        </div>
    </div>
    <div class="col-md-4" style="padding:10px">
        @if (Model.Image != null)
        {
            <img src=@ViewBag.ImageData alt="" width="400" />
        }
        else
        {
            <img src=~/Content/Image/no_image.jpeg alt="" width="300" />
        }
    </div>
</div>

<div class="row">    
    <div class="col-md-4">
        <h4>The List of Albums</h4>
        <ol>
            @foreach (var al in Model.Albums)
            {
                <li>
                    <a href="~/Albums/Details/@al.AlbumID">@al.Title</a>
                </li>
            }
        </ol>
    </div>
    
    <div class="col-md-4">
        <h4>The List of Songs</h4>
        <ol>
            @foreach (var s in Model.Songs)
            {
                <li>
                    <a href="~/Songs/Details/@s.SongID">@s.Title</a>
                </li>
            }
        </ol>
    </div>
</div>